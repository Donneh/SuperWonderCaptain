import tkinter
import os
import sys
from tkinter import*

master = Tk()

Label(text="Hints nodig?").pack()

separator = Frame(height=2, bd=1, relief=SUNKEN)
separator.pack(fill=X, padx=5, pady=5)

def callback():
    print("Wil je eerst een beschrijving van het spel of wil je gelijk een hint waarbij je 3 punten verliest?")

b = Button(master, text="Klik hier!", command=callback)
b.pack()

mainloop()

master = Tk()
Label(text="Wil je eerst een beschrijving van het spel of wil je gelijk een hint waarbij je 3 punten verliest?").pack()

separator = Frame(height=2, bd=1, relief=SUNKEN)
separator.pack(fill=X, padx=5, pady=5)

mainloop()
